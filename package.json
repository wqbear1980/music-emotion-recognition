{
  "name": "music-emotion-recognition",
  "version": "1.0.0",
  "description": "音乐情绪分析与标签管理系统",
  "main": "electron/main.js",
  "private": true,
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "next dev -p 5000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"pnpm dev\" \"wait-on http://localhost:5000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "pnpm build && tsc -p electron/tsconfig.json && electron-builder",
    "electron:build:win": "pnpm build && tsc -p electron/tsconfig.json && electron-builder --win",
    "electron:build:mac": "pnpm build && tsc -p electron/tsconfig.json && electron-builder --mac",
    "electron:build:linux": "pnpm build && tsc -p electron/tsconfig.json && electron-builder --linux"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/lib-storage": "^3.958.0",
    "@types/jszip": "^3.4.1",
    "@types/pg": "^8.16.0",
    "coze-coding-dev-sdk": "^0.7.15",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "electron-is-dev": "^3.0.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "music-metadata": "^11.10.5",
    "next": "16.0.10",
    "pg": "^8.16.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "recharts": "^3.6.0",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.musicemotion.recognition",
    "productName": "音乐情绪识别",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.music",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio"
    }
  }
}
